<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rymcu.mortise.mapper.DictTypeMapper">
    <resultMap id="BaseResultMap" type="com.rymcu.mortise.entity.DictType">
        <id column="id" jdbcType="NUMERIC" property="id"/>
        <result column="type_code" jdbcType="VARCHAR" property="typeCode"/>
        <result column="label" jdbcType="VARCHAR" property="label"/>
        <result column="sort_no" jdbcType="NUMERIC" property="sortNo"/>
        <result column="created_time" jdbcType="TIMESTAMP" property="createdTime"/>
        <result column="updated_time" jdbcType="TIMESTAMP" property="updatedTime"/>
    </resultMap>
    <update id="updateStatus">
        update mortise_dict_type
        set status = #{status}
        where id = #{idDict}
    </update>
    <update id="updateDelFlag">
        update mortise_dict_type
        set del_flag = #{delFlag}
        where id = #{idDict}
    </update>
    <update id="batchUpdateDelFlag">
        update mortise_dict_type
        set del_flag = #{delFlag}
        where id in
        <foreach collection="idDictTypes" item="idDictType" open="(" separator="," close=")">
            #{idDictType}
        </foreach>
    </update>
    <select id="selectDictTypeList" resultMap="BaseResultMap">
        select
        id,
        type_code,
        label,
        sort_no,
        status,
        del_flag,
        created_time,
        updated_time
        from mortise_dict_type
        where del_flag = 0
        <if test="query != null and query != ''">
            and instr(label, #{query}) > 0
        </if>
        <if test="typeCode != null and typeCode != ''">
            and type_code = #{typeCode}
        </if>
        <if test="status != null">
            and status = #{status}
        </if>
    </select>
</mapper>
